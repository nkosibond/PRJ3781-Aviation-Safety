<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aviation.MainPage"
             Title="Welcome">
    <Grid>
        <Image Source="backdrop_icon.jpg" Aspect="AspectFill" />

        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            <Label Text="Aviation Safety App" FontSize="40" TextColor="White" HorizontalOptions="Center" FontAttributes="Bold"/>
            <Label Text="Your gateway to ensuring safer skies" FontSize="25" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
            <Button Text="Get Started" Clicked="OnGetStartedClicked" HorizontalOptions="Center" WidthRequest="200"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>